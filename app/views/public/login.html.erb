
	<body>
		<%= error_messages_for :user %>

<p>Not a user yet? <%= link_to("Sign Up!", :controller => "public", :action => "new_user" )%> </p>
	
<% form_for :user, @user, :url => { :action => "send_login" } do |f| %>
  <p>
    <b>username</b><br />
    <%= f.text_field :username %>
  </p>

  <p>
    <b>Password</b><br />
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
	</body>

